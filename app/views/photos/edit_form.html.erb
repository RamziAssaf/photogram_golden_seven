<h1>Edit photo</h1>

<form action="http://localhost:3000/update_photo/<%= @database_row.id %>">
  <div>
    <label for="photo_caption">Current caption:</label>
    <input type="text" name="the_caption" value="<%= @database_row.caption %>">
  </div>
  <div>
    <label for="photo_image_url">Current image URL:</label>
    <input type="text" name="the_source" value="<%= @database_row.source %>">
  </div>
  <div>
    <label for="photo_caption">New caption:</label>
    <input id="photo_caption" type="text" name="the_new_caption">
  </div>
  <div>
    <label for="photo_image_url">New image URL:</label>
    <input id="photo_image_url" type="text" name="the_new_source">
  </div>
  <div>
  <button>Edit Photo</button>
  </div>
</form>