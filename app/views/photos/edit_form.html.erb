<h1>Edit photo</h1>

<form action="http://localhost:3000/update_photo/<%= @database_row.id %>">
  <div>
    <label for="photo_caption">Caption:</label>
    <input type="text" name="the_caption" value="<%= @database_row.caption %>">
  </div>
  <div>
    <label for="photo_image_url">Image URL:</label>
    <input type="text" name="the_source" value="<%= @database_row.source %>">
  </div>
  <div>
  <button>Edit Photo</button>
  </div>
</form>